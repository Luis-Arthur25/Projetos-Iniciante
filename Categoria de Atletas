from datetime import date
nasc = int(input('Informe o ano de nascimento do atleta: '))
atual = date.today().year
idade = atual - nasc

if 0 < idade <= 9:
    print('O atleta tem {} anos. Ele pertence a categoria MIRIM'.format(idade))
elif 9 < idade <= 14:
    print('O atleta tem {} anos. Ele pertence a categoria INFANTIL'.format(idade))
elif 14 < idade <= 19:
    print('O atleta tem {} anos. Ele pertence a categoria JUNIOR'.format(idade))
elif 19 < idade <= 25:
    print("O atleta tem {} anos. Ele pertence a categoria SÃŠNIOR".format(idade))
else:
    print('O atleta tem {} anos. Ele pertence a categoria MASTER'.format(idade))
